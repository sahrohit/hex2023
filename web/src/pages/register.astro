---
import Header from "~/components/header.astro";
import Card from "~/components/card.astro";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import Layout from "~/layouts/layout.astro";
import type { EventRegistration } from "~/types";

const events: Array<EventRegistration> = [
    {
        name: "HExGenuis (Hackathon)",
        href: "https://docs.google.com/forms/d/e/1FAIpQLSf1BhsJ4tnqT_h8vvviRVl5u2c0b1D2qqayPvNzoLE2ZqYF4Q/viewform",
        description: "Join us for a 36-hour hackathon ðŸ•‘ on 15th July, 1 PM.",
    },
    {
        name: "CTF (Catch the Flag)",
        description:
            "Try to find the flag ðŸš© in the given code and win exciting prizes!",
        href: "https://docs.google.com/forms/d/e/1FAIpQLSeXZbomQ_u9IR7l3m8hlCgmntW8PC3NWORo2Ms8PQeVa8JBSA/viewform?usp=sf_link",
    },
    {
        name: "Technical Quiz",
        description:
            "Prove your expertise in our Technical Quiz and showcase your technical prowess. ðŸ§ ",
        href: "https://docs.google.com/forms/d/1I5RNzKLNzLw9722EKNu9zALKgvC9VlSg7m72sbdhOwI/viewform",
    },
    {
        name: "UI/UX Design",
        description:
            "Design a UI/UX for a given problem statement and win prizes! ðŸŽ¨",
        href: "https://docs.google.com/forms/d/e/1FAIpQLSdmc2lUv958zp76Cv4XFsRN2TWlvTHUY9vp9xz-M5RET6ZnQw/viewform",
    },
    {
        name: "Project Idea Submission",
        description: "Gain your project recognition by everyone! ðŸ’»",
        href: "https://docs.google.com/forms/d/e/1FAIpQLSfiHiUCBaINe9zTLZJXGwMOOYfiZI_f7ThK-FMDnnAbcFlCzQ/viewform",
    },
];
---

<Layout>
    <Header />
    <section class="relative h-full overflow-y-hidden bg-black">
        <Starfield />
        <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
            <HeroImage />
        </div>

        <div
            class="max-h-100vh relative mx-8 grid h-full place-items-center pb-16"
        >
            <div class="max-h-[76vh] overflow-y-scroll sm:overflow-y-hidden">
                <ul
                    role="list"
                    class="grid grid-cols-[repeat(auto-fit,minmax(24ch,1fr))] gap-4"
                >
                    {
                        events.map((event) => (
                            <Card
                                href={event.href}
                                title={event.name}
                                body={event.description}
                            />
                        ))
                    }
                </ul>
            </div>
            <h2
                class="gradient-text flex w-full flex-col gap-2 self-end pb-4 text-center font-extrabold tracking-tighter text-6xl sm:gap-4 sm:self-auto sm:justify-self-end"
            >
                Registration
            </h2>
        </div>
        <h1>Hello</h1>
    </section>
</Layout>

<noscript>
    <style>
        #splash-bg-fallback {
            display: block;
        }
    </style>
</noscript>
